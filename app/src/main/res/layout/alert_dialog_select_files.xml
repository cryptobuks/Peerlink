<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:id="@+id/btn_attach_photos"
            app:backgroundTint="#00695C"
            android:tint="@color/white"
            android:layout_weight="1"
            android:src="@drawable/ic_image_black_24dp"
            android:layout_height="wrap_content" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_attach_video"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@drawable/ic_ondemand_video_24dp"
            android:tint="@color/white"
            app:backgroundTint="#c70008"
            app:rippleColor="#eee" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:id="@+id/btn_attach_filez"
            app:backgroundTint="#304FFE"
            android:tint="@color/white"
            android:layout_weight="1"
            android:src="@drawable/ic_attach_file_24dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>

