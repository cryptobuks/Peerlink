<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dubedivine.samples.features.addQuestion.AddQuestionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_add_picture"
            android:layout_width="0dp"
            android:text="add image"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_image_black_24dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_add_video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="add Video"
            android:drawableLeft="@drawable/ic_ondemand_video_24dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_add_files"
            android:layout_width="0dp"
            android:text="Add Files"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_attach_file_24dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/add_q_linearlayout_"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        </LinearLayout>
    </HorizontalScrollView>
    <AutoCompleteTextView
        android:id="@+id/q_add"
        android:labelFor="@+id/et_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="8"
        android:inputType="textMultiLine" />

    <include
        layout="@layout/content_fab_add" />

</LinearLayout>
